<config>
    <tabs>
        <facebookpage translate="label" module="facebookpage">
            <label>Lkwebtools</label>
            <sort_order>5000</sort_order>
        </facebookpage>
    </tabs>
    <sections>
        <facebookpage translate="label" module="facebookpage">
            <class>separator-top</class>
            <label>FB Page Plugin</label>
            <tab>facebookpage</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label" module="facebookpage">
                    <label>General settings</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>


         <fbenable translate="title" module="facebookpage">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
           </fbenable>

                    <fburl translate="label">
                    <label>Facebook Page URL</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                  </fburl>

                <fbwidth translate="label">
                    <label>Width</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                </fbwidth>

                <fbheight translate="label">
                    <label>Height</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                </fbheight>

              <fbsmheadr translate="title comment" module="facebookpage">
                            <label>Use Small Header</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Use the small header instead.</comment>
                        </fbsmheadr>
                        <fbfaceshow translate="title comment" module="facebookpage">
                            <label>Show Friend's Faces</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Show profile photos when friends like this</comment>
                        </fbfaceshow>
                        <fbcoverpic translate="title" module="facebookpage">
                            <label>Hide Cover Photo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </fbcoverpic>
                       <adapt translate="title comment" module="facebookpage">
                            <label>Adapt to plugin container width</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Try to fit inside the container width</comment>
                        </adapt>

                    </fields>
                </general>
               
            </groups>
        </facebookpage>
    </sections>
</config>
